{
  "name": "ItalianoLanguageCenter",
  "devDependencies": {
    "babel-core": "^5.8.23",
    "babel-eslint": "^4.1.0",
    "babel-loader": "^5.3.2",
    "bootstrap-sass": "^3.3.5",
    "clean-webpack-plugin": "^0.1.3",
    "css-loader": "^0.16.0",
    "csslint": "^0.10.0",
    "csslint-loader": "^0.2.1",
    "eslint": "^1.3.1",
    "eslint-loader": "^1.0.0",
    "eslint-plugin-react": "^3.3.0",
    "extract-text-webpack-plugin": "^0.8.2",
    "file-loader": "^0.8.4",
    "flux": "^2.1.1",
    "html-webpack-plugin": "^1.6.1",
    "node-libs-browser": "^0.5.2",
    "node-sass": "^3.3.2",
    "object-assign": "^4.0.1",
    "path": "^0.11.14",
    "react-hot-loader": "^1.3.0",
    "sass-loader": "^2.0.1",
    "style-loader": "^0.12.3",
    "url-loader": "^0.5.6",
    "webpack": "^1.12.0",
    "webpack-dev-server": "^1.10.1",
    "webpack-merge": "^0.1.3"
  },
  "dependencies": {
    "i18n-js": "^1.0.0",
    "jquery": "^2.1.4",
    "lodash": "^3.10.1",
    "node-uuid": "^1.4.3",
    "react": "^0.14.0",
    "react-bootstrap": ">=0.26.0",
    "react-dom": "^0.14.0"
  },
  "engines": {
    "node": ">=3.3.0"
  },
  "browserify-shim": {
    "jquery": "global:$"
  },
  "scripts": {
    "build": "webpack",
    "lint": "eslint --ext .js --ext .jsx ./app/",
    "start": "webpack-dev-server --hot --inline --progress --content-base build",
    "test": "node ./node_modules/jest-cli/bin/jest.js"
  },
  "babel": {
    "stage": 1
  },
  "jest": {
    "rootDir": "./app/assets/javascripts/components",
    "scriptPreprocessor": "<rootDir>/__tests__/preprocessor.js",
    "moduleFileExtensions": [
      "js",
      "jsx"
    ],
    "unmockedModulePathPatterns": [
      "react"
    ],
    "testFileExtensions": [
      "js",
      "jsx"
    ],
    "testPathIgnorePatterns": [
      "preprocessor.js"
    ]
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "ecmaFeatures": {
      "blockBindings": true,
      "forOf": true,
      "jsx": true
    },
    "env": {
      "browser": true,
      "builtin": true,
      "es6": true,
      "jasmine": true,
      "node": true
    },
    "plugins": [
      "react"
    ],
    "globals": {
      "I18n": true,
      "$": true
    },
    "rules": {
      "block-scoped-var": 2,
      "comma-style": [
        2,
        "last"
      ],
      "curly": [
        2,
        "all"
      ],
      "dot-notation": [
        2,
        {
          "allowKeywords": true
        }
      ],
      "eqeqeq": [
        2,
        "allow-null"
      ],
      "guard-for-in": 2,
      "no-bitwise": 2,
      "no-caller": 2,
      "no-cond-assign": [
        2,
        "except-parens"
      ],
      "no-debugger": 2,
      "no-empty": 2,
      "no-extra-semi": 2,
      "no-eval": 2,
      "no-extend-native": 2,
      "no-irregular-whitespace": 2,
      "no-iterator": 2,
      "no-loop-func": 2,
      "no-multi-str": 2,
      "no-new": 2,
      "no-proto": 2,
      "no-script-url": 2,
      "no-sequences": 2,
      "no-shadow": 2,
      "no-undef": 2,
      "no-unused-vars": 2,
      "no-with": 2,
      "semi": [
        0,
        "never"
      ],
      "valid-typeof": 2,
      "wrap-iife": [
        2,
        "inside"
      ],
      "new-cap": 0,
      "strict": 0,
      "no-underscore-dangle": 0,
      "no-use-before-define": 0,
      "eol-last": 0,
      "jsx-quotes": 1,
      "quotes": [
        2,
        "single"
      ],
      "react/jsx-boolean-value": 1,
      "react/jsx-no-undef": 1,
      "react/jsx-uses-react": 1,
      "react/jsx-uses-vars": 1,
      "react/no-did-mount-set-state": 1,
      "react/no-did-update-set-state": 1,
      "react/no-multi-comp": 1,
      "react/no-unknown-property": 1,
      "react/react-in-jsx-scope": 1,
      "react/self-closing-comp": 1
    }
  }
}
