{
  "name": "ItalianoLanguageCenter",
  "dependencies": {
    "bootstrap-sass": "^3.3.5",
    "browserify": "~>6.3",
    "browserify-incremental": "^1.4.0",
    "browserify-shim": "^3.8.2",
    "es6ify": "^1.6.0",
    "flux": "^2.1.1",
    "jquery": "^2.1.4",
    "object-assign": "^4.0.1",
    "react": "^0.13.3",
    "react-tools": "^0.13.3",
    "reactify": "^0.17.1"
  },
  "devDependencies": {
    "babel-eslint": "^4.1.3",
    "es6ify": "^1.6.0",
    "eslint": "^1.5.1",
    "eslint-plugin-react": "^3.5.1",
    "jest-cli": "^0.5.0",
    "lodash": "^3.10.1"
  },
  "engines": {
    "node": ">=0.10.0"
  },
  "browserify-shim": {
    "jquery": "global:$"
  },
  "scripts": {
    "test": "node ./node_modules/jest-cli/bin/jest.js",
    "lint": "eslint . --ext .js --ext .jsx ./app"
  },
  "jest": {
    "rootDir": "./app/assets/javascripts/components",
    "scriptPreprocessor": "<rootDir>/__tests__/preprocessor.js",
    "moduleFileExtensions": [
      "js",
      "jsx"
    ],
    "unmockedModulePathPatterns": [
      "react"
    ],
    "testFileExtensions": [
      "js",
      "jsx"
    ],
    "testPathIgnorePatterns": [
      "preprocessor.js"
    ]
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "env": {
      "browser": true,
      "builtin": true,
      "es6": true,
      "jasmine": true,
      "node": true
    },
    "plugins": [
      "react"
    ],
    "globals": {
      "I18n": true,
      "$": true
    },
    "rules": {
      "block-scoped-var": 2,
      "comma-style": [
        2,
        "last"
      ],
      "curly": [
        2,
        "all"
      ],
      "dot-notation": [
        2,
        {
          "allowKeywords": true
        }
      ],
      "eqeqeq": [
        2,
        "allow-null"
      ],
      "guard-for-in": 2,
      "no-bitwise": 2,
      "no-caller": 2,
      "no-cond-assign": [
        2,
        "except-parens"
      ],
      "no-debugger": 2,
      "no-empty": 2,
      "no-extra-semi": 2,
      "no-eval": 2,
      "no-extend-native": 2,
      "no-irregular-whitespace": 2,
      "no-iterator": 2,
      "no-loop-func": 2,
      "no-multi-str": 2,
      "no-new": 2,
      "no-proto": 2,
      "no-script-url": 2,
      "no-sequences": 2,
      "no-shadow": 2,
      "no-undef": 2,
      "no-unused-vars": 2,
      "no-with": 2,
      "semi": [
        0,
        "never"
      ],
      "valid-typeof": 2,
      "wrap-iife": [
        2,
        "inside"
      ],
      "new-cap": 0,
      "strict": 0,
      "no-underscore-dangle": 0,
      "no-use-before-define": 0,
      "eol-last": 0,
      "jsx-quotes": 1,
      "quotes": [
        2,
        "single"
      ],
      "react/jsx-boolean-value": 1,
      "react/jsx-no-undef": 1,
      "react/jsx-uses-react": 1,
      "react/jsx-uses-vars": 1,
      "react/no-did-mount-set-state": 1,
      "react/no-did-update-set-state": 1,
      "react/no-multi-comp": 1,
      "react/no-unknown-property": 1,
      "react/react-in-jsx-scope": 1,
      "react/self-closing-comp": 1
    }
  }
}
